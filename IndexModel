using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Mvc.RazorPages;
using Microsoft.EntityFrameworkCore;
using ProjetoASP.Data;
using ProjetoASP.Models;
using System.Threading.Tasks;
using Microsoft.AspNetCore.Mvc.RazorPages;
using System.Linq;
using Microsoft.AspNetCore.Mvc.Rendering;



namespace ProjetoASP.Pages.Movies
{
    public class TesteModel : PageModel
    {
        private readonly ProjetoASPContext _context;

        public TesteModel(ProjetoASPContext context)
        {
            _context = context;
        }

        public IList<Movie> Movies { get; set; } = new List<Movie>();

        [BindProperty(SupportsGet = true)]
        public string? SearchString { get; set; }
        [BindProperty(SupportsGet = true)]
        public string? Genre { get; set; }
        public SelectList? GenresList { get; set; }


        public async Task OnGetAsync()
        {
            var movies = from m in _context.Movie select m;

            IQueryable<string> QueryGenres = from m in _context.Movie orderby m.Genre select m.Genre;

            if(!string.IsNullOrWhiteSpace(SearchString))
            {
                movies = movies.Where(m => m.Title.Contains(SearchString));
            }

            if(!string.IsNullOrWhiteSpace(Genre))
            {
                movies = movies.Where(m => m.Genre == Genre);
            }

            GenresList = new SelectList(await QueryGenres.Distinct().ToListAsync());

            if(movies != null)
            {
                Movies = await movies.ToListAsync();
            }
               
        }
    }
}
